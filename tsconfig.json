{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "target": "esnext",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "lib": [
      "es2017",
      "es7",
      "es6",
      "dom"
    ],
    "outDir": "dist",
    "moduleResolution": "node",
    "importHelpers": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
